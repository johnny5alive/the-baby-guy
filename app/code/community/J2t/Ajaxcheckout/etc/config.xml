<?xml version="1.0"?>
<config>
    <modules>
            <J2t_Ajaxcheckout>
                    <version>0.1.0</version>
                    <depends>
                            <Mage_Customer />
                            <Mage_Checkout />
                    </depends>
            </J2t_Ajaxcheckout>
    </modules>
    <global>

        <models>
            <j2tajaxcheckout>
                <class>J2t_Ajaxcheckout_Model</class>
            </j2tajaxcheckout>
        </models>
        <blocks>
            <j2tajaxcheckout>
                <class>J2t_Ajaxcheckout_Block</class>
            </j2tajaxcheckout>
        </blocks>
        <helpers>
            <j2tajaxcheckout>
                <class>J2t_Ajaxcheckout_Helper</class>
            </j2tajaxcheckout>
        </helpers>

    </global>

    <frontend>
        <layout>
            <updates>
                <j2tajaxcheckout>
                    <file>j2tajaxcheckout.xml</file>
                </j2tajaxcheckout>
            </updates>
        </layout>
        <translate>
            <modules>
                <J2t_Ajaxcheckout>
                    <files>
                        <default>j2t_ajaxcheckout.csv</default>
                    </files>
                </J2t_Ajaxcheckout>
            </modules>
        </translate>

    </frontend>

    <admin>
        <routers>
            <j2tajaxcheckout>
                <use>admin</use>
                <args>
                    <module>J2t_Ajaxcheckout</module>
                    <frontName>j2tajaxcheckout</frontName>
                </args>
            </j2tajaxcheckout>
        </routers>
    </admin>

    <adminhtml>

        <acl>
            <resources>
                <admin>
                    <children>
                        <catalog>
                            <children>
                                <j2tajaxcheckout_adminform>
                                    <title>Configuration</title>
                                </j2tajaxcheckout_adminform>
                            </children>
                        </catalog>
                    </children>
                </admin>
            </resources>
        </acl>


        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <j2tajaxcheckout>
                                            <title>J2T Ajax Cart</title>
                                        </j2tajaxcheckout>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <customer>
                            <children>
                                <j2tajaxcheckout translate="title">
                                    <title>J2T Ajax Cart</title>
                                    <sort_order>45</sort_order>
                                </j2tajaxcheckout>
                            </children>
                        </customer>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>


    <default>
        <j2tajaxcheckout>
            <default>
                <j2t_ajax_cart_show_popup>1</j2t_ajax_cart_show_popup>
            </default>
        </j2tajaxcheckout>
    </default>

</config>

