<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-collateral box-up-sell">
    <h2><?php echo $this->__('We Also Recommend') ?></h2>
    <div class="products-grid row-fluid" id="upsell-product-table">
    <?php // $this->setColumnCount(5); // uncomment this line if you want to have another number of columns. also can be changed in layout ?>
    <?php $this->resetItemsIterator() ?>
    <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
        <div>
        <?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
            <?php if($_link=$this->getIterableItem()): ?>
            <div class="item span4">
                <div class="item-inner">
                    <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(250); ?>"  alt="<?php echo $this->htmlEscape($_link->getName()) ?>" /></a>
                    <div class="product-details">
                    
                            <h3 class="product-name"><a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>"><?php echo $this->htmlEscape($_link->getName()) ?></a></h3>
                            <?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
                            <?php echo $this->getReviewsSummaryHtml($_link) ?>
                    
                    </div>
                </div>
            </div>
            <?php else: ?>
            <div class="empty">&nbsp;</div>
            <?php endif; ?>
        <?php endfor; ?>
        </div>
    <?php endfor; ?>
    </div>
    <script type="text/javascript">decorateTable('upsell-product-table')</script>
</div>
<?php endif ?>
