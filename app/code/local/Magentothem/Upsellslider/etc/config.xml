<?xml version="1.0"?>
<config>
    <modules>
        <Magentothem_Upsellslider>
            <version>1.7.0.0</version>
        </Magentothem_Upsellslider>
    </modules>
    <global>
        <blocks>
            <upsellslider>
                <class>Magentothem_Upsellslider_Block</class>
            </upsellslider>
            <catalog>
                <rewrite>
                    <product_list_upsell>Magentothem_Upsellslider_Block_Catalog_Product_List_Upsell</product_list_upsell>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <upsellslider>
                <class>Magentothem_Upsellslider_Model</class>
            </upsellslider>
        </models>
        <helpers>
            <upsellslider>
                <class>Magentothem_Upsellslider_Helper</class>
            </upsellslider>
        </helpers>
		<events>
			<controller_action_layout_generate_blocks_after>
				<observers>
					<upsellslider_layout_generate_observer>
						<type>singleton</type>
						<class>upsellslider/layout_generate_observer</class>
						<method>addJqueryLibrary</method>
					</upsellslider_layout_generate_observer>
				</observers>
			</controller_action_layout_generate_blocks_after>
		</events>
    </global>
    <frontend>
        <layout>
            <updates>
                <upsellslider>
                    <file>upsellslider.xml</file>
                </upsellslider>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
		<menu>
			<magentothem translate="title" module="upsellslider">
				<title>Magentothem</title>
				<sort_order>71</sort_order>               
				<children>
					<upsellslider translate="title" module="upsellslider">
						<title>UpsellSlider</title>
						<sort_order>35</sort_order>
						<children>
							<configuration>
								<title>Configuration</title>
								<sort_order>1</sort_order>
								<action>adminhtml/system_config/edit/section/upsellslider</action>
							</configuration>
						</children>
					</upsellslider>
				</children>
			</magentothem>
		</menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <upsellslider>
                                            <title>Upsell Slider</title>
                                        </upsellslider>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <upsellslider>
            <upsellslider_config>
				<enabled>1</enabled>
				<title>UpSell Products</title>
				<auto>0</auto>
				<speed>3000</speed>
				<interval>600</interval>
				<show_price>1</show_price>
				<review>1</review>
				<qty>6</qty>
				<items_show>3</items_show>
				<item_width>200</item_width>
				<width_thumbnail>300</width_thumbnail>
				<height_thumbnail>300</height_thumbnail>
				<next_back>1</next_back>
				<nav_ctrl>0</nav_ctrl>
            </upsellslider_config>
        </upsellslider>
    </default>
</config>